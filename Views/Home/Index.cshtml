@model IEnumerable<BoxingChampionship.ViewModels.ChampionshipRankViewModel>

@{
    ViewBag.Title = "Boxing Championship";
}

<div class="jumbotron">
    <h1>Boxing Championship Homepage</h1>
    <p class="lead">This web site is developed to manage boxing championships</p>
</div>

<h4>Current rank</h4>

@using (Html.BeginForm())
{
<p>
    Find fighter by name: @Html.TextBox("SearchString")
    <input type="submit" value="Search" />
</p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Rank", "Index", new { sortOrder = ViewBag.RankSortParm })
        </th>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Amount of battles", "Index", new { sortOrder = ViewBag.AmountOfBattlesSortParm })
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentRanking)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountOfBattles)
            </td>
        </tr>
    }
</table>

